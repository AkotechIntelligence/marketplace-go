<div class="account-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="account-title">Products</h1>
            <p class="account-subtitle">Manage your product listings</p>
        </div>
        <a href="/merchant/products/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>
</div>

<div class="account-card">
    <div class="table-responsive">
        <table class="account-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Shop</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="<%= product.imageUrl || '/images/product-placeholder.png' %>" 
                                     alt="<%= product.name %>"
                                     style="width: 40px; height: 40px; object-fit: cover;"
                                     class="rounded mr-2">
                                <div>
                                    <h6 class="mb-0"><%= product.name %></h6>
                                    <small class="text-muted"><%= product.category %></small>
                                </div>
                            </div>
                        </td>
                        <td><%= product.shop.name %></td>
                        <td>$<%= product.price %></td>
                        <td><%= product.stock %></td>
                        <td>
                            <span class="badge badge-<%= product.status === 'active' ? 'success' : 'warning' %>">
                                <%= product.status %>
                            </span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="/merchant/products/<%= product.id %>/edit" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button type="button" 
                                        class="btn btn-sm btn-outline-danger"
                                        onclick="deleteProduct('<%= product.id %>')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<script>
function deleteProduct(id) {
    if (confirm('Are you sure you want to delete this product?')) {
        fetch(`/api/products/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                alert('Error deleting product');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting product');
        });
    }
}
</script>