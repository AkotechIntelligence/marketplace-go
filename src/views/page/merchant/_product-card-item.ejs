<div class="product-card">
    <div class="product-image">
        <% if (product.ProductImages && product.ProductImages.length > 0) { %>
            <img src="/uploads/<%= product.ProductImages[0].imageUrl %>" 
                 alt="<%= product.name %>" 
                 class="product-img">
        <% } else { %>
            <img src="/images/product-placeholder.png" 
                 alt="<%= product.name %>" 
                 class="product-img">
        <% } %>
        <div class="product-badges">
            <% if (product.quantity <= 0) { %>
                <span class="badge badge-danger">Out of Stock</span>
            <% } else if (product.quantity <= 5) { %>
                <span class="badge badge-warning">Low Stock</span>
            <% } %>
        </div>
    </div>
    <div class="product-details">
        <h5 class="product-name"><%= product.name %></h5>
        <p class="product-shop">
            <i class="fas fa-store"></i> <%= product.MerchantShop.shopName %>
        </p>
        <div class="product-info">
            <div class="product-price">$<%= product.price.toFixed(2) %></div>
            <div class="product-stock">
                <i class="fas fa-box"></i> <%= product.quantity %> in stock
            </div>
        </div>
        <div class="product-category">
            <span class="category-badge">
                <i class="fas fa-tag"></i> 
                <%= product.ProductCategory ? product.ProductCategory.name : 'Uncategorized' %>
            </span>
        </div>
        <div class="product-actions">
            <a href="/merchant/product/edit/<%= product.uuid %>" 
               class="btn btn-sm btn-outline-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <button type="button" 
                    class="btn btn-sm btn-outline-danger"
                    onclick="deleteProduct('<%= product.uuid %>')">
                <i class="fas fa-trash"></i> Delete
            </button>
        </div>
    </div>
</div>

<style>
