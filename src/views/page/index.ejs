<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <div class="hero-content">
            <h1 class="mb-4">Discover Amazing Deals</h1>
            <p class="lead mb-5">Shop the best Products and Services from trusted sellers</p>
            <a href="#categories" class="btn btn-shop-now">Shop Now</a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="feature-card">
                    <i class="feature-icon fas fa-truck"></i>
                    <h5 class="font-weight-bold">Free Shipping</h5>
                    <p class="text-muted mb-0">On orders over GHS 500</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card">
                    <i class="feature-icon fas fa-shield-alt"></i>
                    <h5 class="font-weight-bold">Secure Payment</h5>
                    <p class="text-muted mb-0">100% secure transactions</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card">
                    <i class="feature-icon fas fa-undo-alt"></i>
                    <h5 class="font-weight-bold">Easy Returns</h5>
                    <p class="text-muted mb-0">30 days money back</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-card">
                    <i class="feature-icon fas fa-headset"></i>
                    <h5 class="font-weight-bold">24/7 Support</h5>
                    <p class="text-muted mb-0">Dedicated assistance</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5" id="categories">
    <div class="container">
        <h2 class="text-center font-weight-bold mb-5">Shop by Zones</h2>
        <div class="row">
            <% categories.forEach(category => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <i class="<%= category.icon %> mb-4" style="font-size: 2.5rem; color: var(--primary)"></i>
                            <h5 class="card-title font-weight-bold"><%= category.name %></h5>
                            <a href="/marketzone/zones/merchantcategory/<%= category.uuid %>" 
                               class="btn btn-outline-primary mt-3">
                                Browse Products
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>