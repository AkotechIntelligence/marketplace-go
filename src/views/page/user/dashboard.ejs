<div class="account-header">
    <h1 class="account-title">My Dashboard</h1>
    <p class="account-subtitle">Welcome back, <%= user.firstName %>!</p>
</div>

<div class="account-stats">
    <div class="stat-card">
        <i class="fas fa-shopping-bag stat-icon"></i>
        <div class="stat-value">5</div>
        <div class="stat-label">Orders</div>
    </div>
    <div class="stat-card">
        <i class="fas fa-heart stat-icon"></i>
        <div class="stat-value">12</div>
        <div class="stat-label">Wishlist Items</div>
    </div>
    <div class="stat-card">
        <i class="fas fa-wallet stat-icon"></i>
        <div class="stat-value">$250</div>
        <div class="stat-label">Total Spent</div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="account-card">
            <div class="account-card-header">
                <h5 class="account-card-title">Recent Orders</h5>
                <a href="/user/orders" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="table-responsive">
                <table class="account-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#12345</td>
                            <td>2024-01-15</td>
                            <td><span class="badge badge-success">Delivered</span></td>
                        </tr>
                        <tr>
                            <td>#12344</td>
                            <td>2024-01-14</td>
                            <td><span class="badge badge-warning">In Transit</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="account-card">
            <div class="account-card-header">
                <h5 class="account-card-title">Recent Wishlist</h5>
                <a href="/user/wishlist" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="table-responsive">
                <table class="account-table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Product 1</td>
                            <td>$99.99</td>
                            <td><span class="badge badge-success">In Stock</span></td>
                        </tr>
                        <tr>
                            <td>Product 2</td>
                            <td>$149.99</td>
                            <td><span class="badge badge-danger">Out of Stock</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>