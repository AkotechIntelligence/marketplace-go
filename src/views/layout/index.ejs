<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketplace</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand font-weight-bold" href="/">Marketplace</a>
            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <form class="form-inline mx-auto">
                    <div class="input-group">
                        <input class="form-control border-right-0" type="search" placeholder="Search products...">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary border-left-0" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
                <ul class="navbar-nav ml-auto">
                    <% if(user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/account">My Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">Logout</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/user/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/user/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4 footer-links">
                    <h5>About Us</h5>
                    <ul>
                        <li><a href="#"><i class="fas fa-angle-right mr-2"></i>About Marketplace</a></li>
                        <li><a href="#"><i class="fas fa-angle-right mr-2"></i>Careers</a></li>
                        <li><a href="#"><i class="fas fa-angle-right mr-2"></i>Press</a></li>
                    </ul>
                </div>
                <div class="col-md-4 footer-links">
                    <h5>Customer Service</h5>
                    <ul>
                        <li><a href="#"><i class="fas fa-angle-right mr-2"></i>Contact Us</a></li>
                        <li><a href="#"><i class="fas fa-angle-right mr-2"></i>Shipping Policy</a></li>
                        <li><a href="#"><i class="fas fa-angle-right mr-2"></i>Returns & Exchanges</a></li>
                    </ul>
                </div>
                <div class="col-md-4 footer-links">
                    <h5>Connect With Us</h5>
                    <div class="social-icons">
                        <a href="#" class="mr-3"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="mr-3"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="mr-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-4" style="background-color: rgba(255,255,255,0.1)">
            <div class="text-center py-3">
                <p class="mb-0">&copy; 2024 Marketplace. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>