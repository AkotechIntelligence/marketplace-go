<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marketplace - My Account</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/account.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand font-weight-bold" href="/">Marketplace</a>
            <div class="ml-auto">
                <span class="mr-3">Welcome, <%= user.firstName %></span>
                <a href="/auth/logout" class="btn btn-outline-primary">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Account Content -->
    <div class="account-wrapper">
        <div class="container">
            <div class="row">
                <!-- User Sidebar -->
                <div class="col-lg-3 mb-4">
                    <div class="account-sidebar">
                        <ul class="account-menu">
                            <li class="account-menu-item">
                                <a href="/user" class="account-menu-link <%= title === 'Dashboard' ? 'active' : '' %>">
                                    <i class="fas fa-home account-menu-icon"></i>
                                    Dashboard
                                </a>
                            </li>
                            <li class="account-menu-item">
                                <a href="/user/orders" class="account-menu-link <%= title === 'Orders' ? 'active' : '' %>">
                                    <i class="fas fa-shopping-bag account-menu-icon"></i>
                                    My Orders
                                </a>
                            </li>
                            <li class="account-menu-item">
                                <a href="/user/wishlist" class="account-menu-link <%= title === 'Wishlist' ? 'active' : '' %>">
                                    <i class="fas fa-heart account-menu-icon"></i>
                                    Wishlist
                                </a>
                            </li>
                            <li class="account-menu-item">
                                <a href="/user/profile" class="account-menu-link <%= title === 'Profile' ? 'active' : '' %>">
                                    <i class="fas fa-user account-menu-icon"></i>
                                    Profile
                                </a>
                            </li>
                            <li class="account-menu-item">
                                <a href="/user/addresses" class="account-menu-link <%= title === 'Addresses' ? 'active' : '' %>">
                                    <i class="fas fa-map-marker-alt account-menu-icon"></i>
                                    Addresses
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-lg-9">
                    <div class="account-content">
                        <%- body %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>